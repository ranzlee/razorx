@using RxTemplate.Blob
@implements IComponentModel<BlobModel?>

@if (Model is null) {
    <FileInput 
        Id="example-blob" 
        Label="Pick a file" 
        Property="file" 
        hx-target="#example-blob"
        hx-swap="outerHTML transition:true"
        hx-post="/examples/blob"/>
    return;
} 
<Blob Model="@(Model)" />

@code {
    [Parameter] public BlobModel? Model { get; set; }
}