<RxModal 
    Id="@(Id)" 
    ContainerClass="modal modal-bottom sm:modal-middle"
    ModalClass="modal-box">
    <ModalTitle>
        @(ModalTitle)
    </ModalTitle>
    <Content>
        @(Content)
    </Content>
</RxModal>

@code {
    [Parameter, EditorRequired] public string Id { get; set; } = null!;
    [Parameter, EditorRequired] public RenderFragment? ModalTitle { get; set; }
    [Parameter, EditorRequired] public RenderFragment? Content { get; set; }
}